package solucaoProfessor;

import java.util.Scanner;

public class NumeroMenorException {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		float F1, F2, F; // float
		int i, I1, I2; // inteiro
		System.out.println("Este programa divide F1 por F2\n");
		System.out.println("Informe o primeiro número> ");
		F1 = scan.nextFloat();
		System.out.println("Informe o segundo número> ");
		F2 = scan.nextFloat();
		
		F = divisaoFloat(F1, F2);
		System.out.printf("\nResultado da divisão float> %f", F);
		
		I1 = (int) F1;
		I2 = (int) F2;
		i = divisaoInteira(I1, I2);
		System.out.printf("\nResultado da divisão inteira> %d", i);
		
		try {
			checaNumeros(F1, F2);
		}
		catch (NumeroMenorException e) {
			System.out.println(e.getMessage());
		}
	}
	
	public static void checaNumeros(float n1, float n2) throws NumeroMenorException {
		if(n1 < n2) { 
			throw new NumeroMenorException();
		}
	}
	
	
	public static float divisaoFloat(float x, float y) {
		float r;
		try {
			r = x / y;
		} catch (ArithmeticException e) {
			System.out.println("\nDivisão float: Ocorreu divisão por zero");
			r = 0;
		}
		
		return r;
	}
}










